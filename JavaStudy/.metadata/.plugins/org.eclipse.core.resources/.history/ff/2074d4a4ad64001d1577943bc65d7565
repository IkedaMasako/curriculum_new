package chapter1;

public class cat {
	
//	フィールド
	private String name;
	public int age;
	
//	コンストラクタ
	public cat(String n,int a) {
		this.name = n;
		this.age =a;
	}
	
//メソッド
	public void showName() {
		System.out.println("名前は" + this.name + "です。");
	}
	public void showAged() {
		System.out.println("年齢は" + this.age + "歳です。");
	}
	public void agePlus() {
		age++;
	}


//	メインメソッド
	public static void main(String[] args) {
		// TODO 自動生成されたメソッド・スタブ
	cat pepe = new cat("ペペ",3);
	pepe.agePlus();
	pepe.age = 0;
	pepe.showName();
	pepe.showAge();
	
	}

}
